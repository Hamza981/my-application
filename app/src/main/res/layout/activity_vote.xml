<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ns"
        android:layout_width="190dp"
        android:layout_height="330dp"
        android:src="@drawable/a8"/>
    <ImageView
        android:id="@+id/ik"
        android:layout_toRightOf="@+id/ns"
        android:layout_width="190dp"
        android:layout_height="330dp"
        android:src="@drawable/a9"/>

    <Button
        android:id="@+id/votens"
        android:layout_below="@+id/ns"
        android:alpha="0.5"
        android:text="vote ns"
        android:textSize="20dp"
        android:width="190dp"
        android:textStyle="bold"
        android:textColor="#900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/voteik"
        android:layout_toRightOf="@+id/votens"
        android:layout_below="@+id/ik"
        android:alpha="0.5"
        android:text="vote Ik"
        android:textSize="20dp"
        android:width="190dp"
        android:textStyle="bold"
        android:textColor="#900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/votes"
        android:layout_marginTop="400dp"
        android:alpha="0.5"
        android:visibility="invisible"
        android:text="vote ns"
        android:textSize="20dp"
        android:width="190dp"
        android:textStyle="bold"
        android:textColor="#900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/votesI"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@+id/votes"
        android:alpha="0.5"
        android:visibility="invisible"
        android:text="vote ns"
        android:textSize="20dp"
        android:width="190dp"
        android:textStyle="bold"
        android:textColor="#900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/a"
        android:textColor="#900"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votesI"/>
    <Button
        android:id="@+id/result"
        android:layout_below="@+id/a"
        android:alpha="0.5"
        android:visibility="invisible"
        android:text="show result"
        android:textSize="20dp"
        android:width="190dp"
        android:textStyle="bold"
        android:textColor="#900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>